//首页推荐图片文章特效

$(document).ready(function() {
	$("#article").mouseover(function() {
		$("#articlesum").slideDown();
	});
	$("#article").mouseout(function() {
		$("#articlesum").slideUp("slow");
	});
	$("#articlesum").mouseover(function(){
		$("#articlesum").stop();
	});
	$("#prevview").click(function(){
		$(".item active").slideToggle(2000);
	});
});