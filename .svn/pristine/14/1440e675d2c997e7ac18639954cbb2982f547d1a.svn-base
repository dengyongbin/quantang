	function submit() {
		var name = $("#name").val();
		var email = $("#email").val();
		var content = $("#content").val();
		if (name.length == 0 || name.length > 20) {
			$("#name").focus();
			return;
		}
		if (email.length == 0 || email.length > 50) {
			$("#email").focus();
			return;
		}
		if (content.length == 0 || content.length > 500) {
			$("#email").focus();
			return;
		}
		$.ajax({
			url : "opinionSubmit.htm",
			type : "post",
			data : {
				"name" : name,
				"email" : email,
				"content" : content
			},
			dataType : "text",
			success : function(data) {
				$("#name").val("");
				$("#email").val("");
				$("#content").val("");
				alert('提交成功!');
			}
		});
	}
</script>
