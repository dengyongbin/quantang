package com.quantang.jsoup;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.net.URL;
import java.net.URLConnection;
import java.text.SimpleDateFormat;
import java.util.Calendar;

import org.springframework.beans.factory.annotation.Autowired;

import com.quantang.common.Constant;
import com.quantang.service.CaptureService;

public class CFTCTimerCapture extends java.util.TimerTask {

	@Autowired
	private CaptureService captureService;

	@Override
	public void run() {
		// TODO Auto-generated method stub
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd");
		Calendar c = Calendar.getInstance();
		doCapture(sdf.format(c.getTime()).toString());
	}

	public String doCapture(String targetdate) {
		String backData = "";
		backData = catchPage(Constant.CAPTURE_URL[0], targetdate);
		captureService.saveCatureNYMEXData(backData);

		return "";
	}

	/**
	 * @param targetUrl
	 * @return String
	 * @todo 页面捕捉
	 */
	private static String catchPage(String targetUrl, String targetdate) {
		URL url;
		URLConnection con;
		StringBuffer sb = new StringBuffer("");
		// 向targetUrl发送请求
		try {
			url = new URL(targetUrl.concat(targetdate));
			con = url.openConnection();
			// 读取响应
			BufferedReader reader = new BufferedReader(new InputStreamReader(con.getInputStream(), "utf-8"));
			String temp;
			while ((temp = reader.readLine()) != null) {
				sb.append(temp);
			}
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		return sb.toString();
	}

}
